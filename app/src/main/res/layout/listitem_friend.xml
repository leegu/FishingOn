<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/base_listitem_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_space_max">

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_space_max"
        android:layout_marginLeft="@dimen/base_space"
        android:layout_marginRight="@dimen/base_space">

        <LinearLayout
            android:id="@+id/my_fishing_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circle_solid"
                android:gravity="center"
                android:src="@drawable/icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/my_fishing_item_friend_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/arrow_right" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@id/my_fishing_item_friend_detail"
            android:layout_toRightOf="@id/my_fishing_item_icon"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_space"
            android:paddingRight="@dimen/base_space">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/list_item_space_mid">

                <TextView
                    android:id="@+id/my_fishing_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="昨天  12：00" />

                <TextView
                    android:id="@+id/my_next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/my_fishing_item_time"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="lei" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_background"
                    android:paddingLeft="@dimen/base_space"
                    android:paddingRight="@dimen/base_space"
                    android:text="标签1" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_background"
                    android:paddingLeft="@dimen/base_space"
                    android:paddingRight="@dimen/base_space"
                    android:text="标签1" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/list_item_space_mid">

                <LinearLayout
                    android:id="@+id/my_fishing_item_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="钓龄:" />

                    <TextView
                        android:id="@+id/my_fishing_item_years_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="出钓频次:" />

                    <TextView
                        android:id="@+id/my_fishing_item_times_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10次/月" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>