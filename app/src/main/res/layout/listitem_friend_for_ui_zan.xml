<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base_space"
    android:paddingRight="@dimen/base_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_space_2"
        android:paddingTop="@dimen/base_space_2">

        <LinearLayout
            android:id="@+id/listitem_friend_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <com.go.fish.view.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/friend_user_icon_size"
                android:layout_height="@dimen/friend_user_icon_size"
                android:gravity="center"
                android:src="@drawable/icon" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/delete_enable"
                    android:layout_width="@dimen/base_pic_drawable_x_width"
                    android:layout_height="@dimen/base_pic_drawable_x_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_space"
                    android:background="@drawable/red_btn_bg_no_corners"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="#ffffff"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/base_space_2"
                    android:src="@drawable/hart_red" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/user_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@id/right_icon"
                android:paddingLeft="@dimen/base_space"
                android:paddingRight="@dimen/base_space">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/listitem_friend_far"
                        style="@style/friend_item_text_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="100米"
                        android:visibility="gone" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/listitem_friend_name"
                        style="@style/friend_item_name_style"
                        android:layout_alignParentLeft="true" />

                    <LinearLayout
                        android:id="@+id/tag_container"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/listitem_friend_far"
                        android:layout_toRightOf="@id/listitem_friend_name"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_space_2"
                        android:paddingRight="@dimen/base_space_2">

                        <include layout="@layout/item_tag"></include>

                        <include layout="@layout/item_tag"></include>

                        <include layout="@layout/item_tag"></include>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top"
                    android:paddingTop="@dimen/base_space_2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/friend_item_text_style"
                            android:layout_alignParentLeft="true"
                            android:text="钓龄:" />

                        <TextView
                            android:id="@+id/listitem_friend_fyear"
                            style="@style/friend_item_text_style"
                            android:text="12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/friend_item_text_style"
                            android:layout_alignParentRight="true"
                            android:text="出钓频次:" />

                        <TextView
                            android:id="@+id/listitem_friend_ftimes"
                            style="@style/friend_item_text_style"
                            android:text="10次/月"
                            android:textColor="#aaaaaa" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/line1"
                style="@style/head_bar_bottom_line_style"
                android:layout_height="@dimen/base_border"
                android:layout_below="@id/user_detail"
                android:layout_marginTop="@dimen/base_space_2"
                android:visibility="gone"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line2"
        style="@style/head_bar_bottom_line_style"
        android:layout_height="@dimen/base_border"
        android:layout_below="@id/user_detail"></TextView>

</LinearLayout>