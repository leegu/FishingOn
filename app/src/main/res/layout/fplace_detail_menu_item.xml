<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/base_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            style="@style/split_line_vertical"/>
        <TextView
            android:layout_alignParentRight="true"
            style="@style/split_line_vertical"
            />
        <ImageView
            android:paddingTop="@dimen/base_space_2"
            android:id="@+id/fplace_detail_menu_item_icon"
            android:src="@drawable/incon_114_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fplace_detail_menu_item_title"
            android:layout_below="@id/fplace_detail_menu_item_icon"
            style="@style/fplace_detail_menu_item_text"
            android:text="撒鱼状态" />
        <TextView
            android:layout_height="3dp"
            android:background="@color/base_btn_color"
            android:layout_alignParentBottom="true"
            style="@style/head_bar_bottom_line_style"
            ></TextView>
    </RelativeLayout>


</merge>