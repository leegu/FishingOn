<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_base_color"
    android:orientation="vertical"
    tools:context=".ui.BaseUI" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_bar_height"
        android:background="@color/head_bar" >

        <com.go.fish.view.TextView
            android:id="@+id/base_ui_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_margin="0dp"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingLeft="@dimen/list_item_padding_left"
            android:text="@string/base_ui_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/reg_next_title"
            android:textColor="#ffffff"
            android:textSize="@dimen/head_bar_font_hegiht" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingRight="@dimen/list_item_padding_right" >

        <ImageView
            android:id="@+id/reg_next_photo"
            android:layout_width="@dimen/base_icon_width"
            android:layout_height="@dimen/base_icon_width"
            android:background="@drawable/circle"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/reg_next_1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/list_item_padding_left" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reg_next_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_next_account_text"
                    android:textColor="@color/reg_next_cc"
                    android:textSize="@dimen/list_item_base_text_size" />

                <TextView
                    android:id="@+id/reg_next_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/list_item_padding_left"
                    android:textColor="@color/reg_next_cc"
                    android:textSize="@dimen/list_item_base_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_space"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reg_next_phone_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reg_next_phone_num_text"
                    android:textColor="@color/reg_next_cc"
                    android:textSize="@dimen/list_item_base_text_size" />

                <TextView
                    android:id="@+id/reg_next_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/list_item_padding_left"
                    android:textColor="@color/reg_next_cc"
                    android:textSize="@dimen/list_item_base_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/list_item_backgroud"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingRight="@dimen/list_item_padding_right" >

        <TextView
            android:id="@+id/reg_text_phone_num"
            android:layout_width="@dimen/reg_3_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_next_nick"
            android:textColor="#000000"
            android:textSize="@dimen/list_item_base_text_size" />

        <EditText
            android:id="@+id/reg_text_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_item_space_mid"
            android:layout_toLeftOf="@id/reg_text_phone_num"
            android:cursorVisible="true"
            android:hint="@string/reg_next_release_input"
            android:singleLine="true"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/list_item_hint_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="@dimen/list_item_space"
        android:background="@color/list_item_backgroud"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingRight="@dimen/list_item_padding_right" >

        <TextView
            android:id="@+id/reg_next_fishing_years"
            android:layout_width="@dimen/reg_3_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_next_fishing_years"
            android:textColor="#000000"
            android:textSize="@dimen/list_item_base_text_size" />

        <Spinner
            android:id="@+id/reg_next_fishing_years_spinner"
            android:layout_width="match_parent"
            android:textColor="#999999"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:spinnerMode="dialog"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/reg_3_width"
            android:layout_toLeftOf="@id/reg_next_fishing_years"
            android:entries="@array/reg_next_fishing_years_spinner"
            android:hint="@string/reg_next_release_chose" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="@dimen/list_item_space"
        android:background="@color/list_item_backgroud"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingRight="@dimen/list_item_padding_right" >

        <TextView
            android:id="@+id/reg_next_fishing_times"
            android:layout_width="@dimen/reg_3_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_next_fishing_times"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="@dimen/list_item_base_text_size" />

        <Spinner
            android:id="@+id/reg_next_fishing_times_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/reg_3_width"
            android:layout_toLeftOf="@id/reg_next_fishing_times"
            android:spinnerMode="dialog"
            android:textColor="#999999"
            android:entries="@array/reg_next_fishing_times_spinner"
            android:hint="@string/reg_next_release_chose" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginTop="@dimen/list_item_space"
        android:background="@color/list_item_backgroud"
        android:paddingLeft="@dimen/list_item_padding_left"
        android:paddingRight="@dimen/list_item_padding_right" >

        <TextView
            android:id="@+id/reg_next_location"
            android:layout_width="@dimen/reg_3_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/reg_next_location"
            android:textColor="#000000"
            android:textSize="@dimen/list_item_base_text_size" />

        <Button
            android:id="@+id/reg_next_get_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/list_item_space_mid"
            android:layout_marginTop="8dp"
            android:background="@drawable/gray_shape"
            android:onClick="onClick"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/reg_next_get_location"
            android:textColor="#ffffff"
            android:textSize="@dimen/list_item_hint_text_size" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_item_space_mid"
            android:layout_toLeftOf="@id/reg_next_get_location"
            android:layout_toRightOf="@id/reg_next_location"
            android:background="@null"
            android:cursorVisible="true"
            android:maxEms="11"
            android:singleLine="true"
            android:textColor="#999999"
            android:textColorHint="#999999" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_space_max"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reg_next_skip_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginLeft="@dimen/button_margin_left_right_match_parent"
            android:layout_marginRight="@dimen/button_margin_left_right_match_parent"
            android:background="@drawable/green_shape"
            android:onClick="onClick"
            android:text="@string/reg_next_skip" />
    </LinearLayout>

</LinearLayout>