<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <include
            android:id="@+id/listitem_friend_layout"
            layout="@layout/listitem_friend_for_ui_zan" >
        </include>
        <!--  -->

        <LinearLayout
            android:background="@drawable/base_listitem_background"
            android:padding="@dimen/base_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge Text"
                android:textColor="#888888"
                android:maxLines="7"
                android:textSize="@dimen/base_font_size_h3" />
        </LinearLayout>
        <ViewStub
            android:id="@+id/fnews_image_contianer_view_stub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/horizontal_scroll_image_image" />

        <LinearLayout
            android:layout_marginLeft="@dimen/base_space"
            android:layout_marginRight="@dimen/base_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/listitem_fnews_share"
                style="@style/fnew_bottom_item_style"
                android:src="@drawable/share_" />

            <ImageView
                android:id="@+id/listitem_fnews_care"
                style="@style/fnew_bottom_item_style"
                android:src="@drawable/hart_red" />

            <ImageView
                android:id="@+id/listitem_fnews_good"
                style="@style/fnew_bottom_item_style"
                android:src="@drawable/zan" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/listitem_fnews_comment"
                    style="@style/fnew_bottom_item_style"
                    android:src="@drawable/comment" />

                <TextView
                    android:layout_marginLeft="@dimen/base_space_4"
                    android:layout_marginTop="@dimen/base_space"
                    android:id="@+id/listitem_fnews_comment_count"
                    style="@style/badger_style"
                    android:text="60" />
            </RelativeLayout>
            <!-- #eeeeee -->
        </LinearLayout>
    </LinearLayout>

    <TextView 
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_space_2"
        />
    
</LinearLayout>