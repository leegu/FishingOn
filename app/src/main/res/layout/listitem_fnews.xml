<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/base_space"
    android:layout_marginRight="@dimen/base_space"
    android:background="@drawable/base_listitem_background"
    android:orientation="vertical"
    android:weightSum="1" >

    <include layout="@layout/listitem_friend" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/base_space"
        android:layout_marginRight="@dimen/base_space"
        android:layout_weight="0.25"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/base_font_size_h3" />
    </LinearLayout>

   <!--  <GridView
        android:id="@+id/my_fishing_item_pics_gridview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:drawSelectorOnTop="false"
        android:numColumns="3"
        android:stretchMode="columnWidth" /> -->

    <GridView  
        android:id="@+id/my_fishing_item_pics_gridview"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:columnWidth="90dip"  
        android:gravity="center"  
        android:numColumns="auto_fit"  
        android:stretchMode="columnWidth"  
        android:verticalSpacing="10dip"  
    />  
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height" >

        <TextView
            android:id="@+id/listitem_fnews_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/button_margin_left_right_match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingRight="@dimen/base_space"
            android:text="分享" />

        <LinearLayout
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/base_space"
            android:layout_marginRight="@dimen/base_space"
            android:layout_toLeftOf="@id/listitem_fnews_share"
            android:layout_toStartOf="@id/listitem_fnews_share"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/listitem_fnews_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="left|center_vertical"
                android:onClick="onClick" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="赞:" />

                <TextView
                    android:id="@+id/listitem_fnews_good_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/listitem_fnews_good"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listitem_fnews_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论:" />

                <TextView
                    android:id="@+id/listitem_fnews_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listitem_fnews_care"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:clickable="true"
                android:gravity="center_vertical|right"
                android:onClick="onClick" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注:" />

                <TextView
                    android:id="@+id/listitem_fnews_care_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>