<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="@dimen/list_item_height" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/base_space_2"
        android:paddingRight="@dimen/base_space_2">
        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#264D5F" />
    </LinearLayout>
    <TextView
        android:id="@+id/action_sheet_item_content"
        android:text="Item"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_above="@id/line"
        android:textColor="@color/action_sheet_item_text_color"
        android:textSize="@dimen/base_font_size_h5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>