<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_bar_height"
        android:background="@color/head_bar" >

        <RelativeLayout
            android:id="@+id/base_head_bar_last"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/base_space"
            android:paddingRight="@dimen/base_space"
            android:background="@drawable/base_background"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/head_bar_width"
            android:visibility="invisible"
            android:onClick="onHeadClick" >
            <ImageView
                android:id="@+id/base_ui_close"
                android:onClick="onHeadClick"
                android:layout_width="@dimen/head_bar_icon_width"
                android:layout_height="@dimen/head_bar_icon_height"
                android:clickable="false"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/base_head_bar_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/base_space"
            android:paddingRight="@dimen/base_space"
            android:background="@drawable/base_background"
            android:onClick="onHeadClick" >
            <ImageView
                android:layout_width="@dimen/head_bar_icon_width"
                android:layout_height="@dimen/head_bar_icon_height"
                android:clickable="false"
                android:src="@drawable/publish" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/base_head_bar_publish"
            android:layout_toRightOf="@id/base_head_bar_last">
            <TextView
                android:tag="true"
                android:id="@+id/ui_my_care_head_fplace"
                android:layout_marginLeft="@dimen/list_item_space_mid"
                android:textSize="@dimen/base_font_size_h7"
                android:textColor="@color/head_bar_title_color"
                android:clickable="true"
                android:padding="@dimen/base_space"
                android:onClick="onHeadClick"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="最新播况"
                android:layout_weight="1"
                android:background="@drawable/title_btn_background_selected"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ui_my_care_head_fnews"
                android:layout_marginRight="@dimen/list_item_space_mid"
                android:textSize="@dimen/base_font_size_h7"
                android:textColor="@color/head_bar_title_color"
                android:gravity="center"
                android:background="@drawable/title_btn_background"
                android:layout_gravity="center"
                android:padding="@dimen/base_space"
                android:clickable="true"
                android:onClick="onHeadClick"
                android:text="MY钓播"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ui_fnews_list_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>