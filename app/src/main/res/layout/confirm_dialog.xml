<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gray_shape_no_corners"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="@dimen/base_space_2"
        android:layout_marginBottom="@dimen/base_space_4"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm_dialog_title"
            android:text="你确定离开发布页?"
            style="@style/dialog_title_style"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/confirm_dialog_btn_left"
                android:text="放弃编辑"
                style="@style/dialog_btn_style"
                 />
            <TextView
                android:id="@+id/confirm_dialog_btn_right"
                android:text="继续编辑"
                style="@style/dialog_btn_style" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
