<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome3" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="135dp" >
        <Button
            android:id="@+id/wel_login"
            android:layout_width="@dimen/wel_login_width"
            android:layout_height="@dimen/wel_login_height"
            android:background="@drawable/green_shape"
            android:text="@string/wel_login" />

        <Button
            android:id="@+id/wel_reg"
            android:layout_width="@dimen/wel_login_width"
            android:layout_height="@dimen/wel_login_height"
            android:layout_marginLeft="@dimen/list_item_space_mid"
            android:layout_toRightOf="@id/wel_login"
            android:background="@drawable/green_shape"
            android:text="@string/wel_reg" />
    </RelativeLayout>

</LinearLayout>