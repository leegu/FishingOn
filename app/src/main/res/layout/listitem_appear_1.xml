<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_2"
    android:background="@color/list_item_backgroud"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/base_space" >

        <ImageView
            android:id="@+id/comment_listitem_icon"
            android:layout_width="@dimen/base_pic_icon_width"
            android:layout_height="@dimen/base_pic_icon_height"
            android:background="@drawable/circle_solid"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/comment_listitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_space_mid"
            android:gravity="center_horizontal"
            android:text="磊"
            android:textColor="@color/list_item_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/base_space" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_pic_icon_height" >

            <TextView
                android:id="@+id/appear_listitem_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center_vertical"
                android:text="详情" />

            <TextView
                android:id="@+id/comment_listitem_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/appear_listitem_detail"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长的评论"
                android:textColor="@color/list_item_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#998778" >

            <TextView
                android:id="@+id/comment_listitem_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/list_item_space_mid"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="1分钟前"
                android:textColor="@color/list_item_text_color" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>